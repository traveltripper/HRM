
<% title "Departments" %>
<div class="row">
<div class="col-md-12">
<% if can? :create, @department %>
<%= link_to 'Add', new_department_path, :class=>"fa fa-plus btn btn-primary bottom-margin-10 link-float-right" %>
<%end%>
</div>
</div>
<div class="panel panel-cblue">
<div class="panel-body">
<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
    <th>ID</th>
    <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%=department.id%></td>
        <td><%= link_to department.name, department%></td>
        <td><%= link_to '', department, :class=>"fa fa-eye btn" %></td>
        <td><%= link_to '', edit_department_path(department), :class=>"fa fa-pencil-square-o btn " %></td>
        <!-- <td><%#= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>






