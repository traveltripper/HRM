<div class="form-position-from-top">
<div class="panel panel-cblue">
<div class="panel-heading">Login</div>
<div class="panel-body pan">
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name} ", :class=>"alert alert-danger" if msg.is_a?(String) %>
  <%- end -%>  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class=>"form-horizontal jvalidation") do |f| %>
    <div class="form-body pal">
    
      <div class="form-group">
          <%= f.label :email, :class=>"col-md-3 control-label" %>
          <div class="col-md-9">
            <div class="input-icon right">
              <i class="fa fa-envelope"></i>
            <%= f.email_field :email, autofocus: true, :class=>"form-control", :id=>"inputEmail" %>
            </div>
          </div>
      </div>

      </br>
      </br>

      <div class="form-group">
          <%= f.label :password, :class=>"col-md-3 control-label" %>
          <div class="col-md-9">
            <div class="input-icon right">
              <i class="fa fa-lock"></i>
              <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
            </div>
          </div>
      </div>

      </br>
      </br>
    
      <div class="form-group mbn">
          <div class="col-md-3 forgot-password-margin"></div>
          <div class="col-md-6">
            <div class="checkbox">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>                  
              <% end -%>
            </div>
          </div>
      </div>
    </div>

    <div class="form-actions pal">
      <div class="form-group mbn">
        <div class="col-md-offset-3 col-md-8">
        <%= f.submit "Log in", :class=>"btn btn-primary jsvalidation" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"btn btn-primary" %><br />
        <% end -%>
        </div>
      </div>
    </div>

  <% end %>  

</div>
</div>

</div>


