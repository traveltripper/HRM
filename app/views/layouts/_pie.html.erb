<script>
google.charts.load("current", {packages:["corechart"]});
google.charts.setOnLoadCallback(drawChart);

  var options = {
    'legend': {'position': 'right'},
    'pieSliceText': 'value',
    'width':400,
    'height':135,
    'chartArea' : {left:20,top:5, bottom:5,width:"100%",height:"100%"}
  };

  function drawChart() {
      var data = google.visualization.arrayToDataTable([
        ['Leave', 'Number'],
        ['Leave Used', <%=current_employee.leave_used%>], ['Leaves Available', <%=current_employee.days_of_leave - current_employee.leave_used%>], ['WFH Used', <%=current_employee.work_from_home_used%>],
        ['WFH Available', 8]
      ]);
    

  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>