	<h4>CPP based on designations</h4>
	<div class="bg-color-white">
	<%cpp_designations.each do |cpp|%>
		<p id="cpp_designation"><%=link_to cpp.designation, cpp, class:"custom_bluecolor"%></p>
	<%end%>		
	</div>
<%end%>

