<%= tinymce %>
<%=form_for(@cpp) do |f| %>
  <div class="form-inputs">
  	<%=f.label :designation%><br/>
  	<%=f.text_field :designation, class: "form-control"%><br/>
  </div>
  <div class="form-inputs">
  	<%=f.label :description%><br/>
    <%= f.text_area :description, class: "form-control tinymce", size: "10x20" %><br/>
  </div>

  <div class="form-actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
