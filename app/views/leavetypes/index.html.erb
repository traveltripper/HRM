<p id="notice"><%= notice %></p>
<% title "Leavetypes" %>

<div class="row">
<div class="col-md-12">
<% if can? :create, @leavetype %>
<%= link_to ' Add', new_leavetype_path, :class=>"fa fa-plus btn btn-primary bottom-margin-10 link-float-right" %>
<%end%>
</div>
</div>

<div class="panel panel-cblue">
<div class="panel-body">
<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Limit</th>
    <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @leavetypes.each_with_index do |leavetype, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%=link_to leavetype.name, leavetype%></td>
        <td><%=link_to leavetype.limit, leavetype%></td>
        <td><%= link_to '', leavetype, :class=>"fa fa-eye btn" %></td>
        <td><%= link_to '', edit_leavetype_path(leavetype), :class=>"fa fa-pencil-square-o btn " %></td>
        <!-- <td><%= link_to 'Destroy', leavetype, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>



