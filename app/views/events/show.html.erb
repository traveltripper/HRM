<p id="notice"><%= notice %></p>
<%title 'Event'%>

<div class="row">
  
    <div class="col-md-4 event-background-color">     
      <%=image_tag @event.picture.url(:medium), class:'hrm_event_images'%>
      <h4><%=@event.title%></h4>
      <p>From: <%=@event.start.strftime("%d-%b-%Y")%> To: <%=@event.end_date.strftime("%d-%b-%Y")%></p>
      <p><%=@event.reason%></p>     
      <%= link_to 'Back', events_path, :class=>"fa fa-arrow-left btn btn-primary"  %>   
      <%= link_to 'Edit', edit_event_path(@event), :class=>"fa fa-pencil-square-o btn btn-warning"%>
      <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"fa fa-times btn btn-danger" %>    
    </div>
  
</div>

