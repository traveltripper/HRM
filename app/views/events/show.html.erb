<div class="row">	
	<div class="col-md-12">
		<h3><%=@event.title%></h3>
	</div>
</div>
<div class="col-md-12 bg-color-white">
    <div class="Team bg-color-white">
		<div class="col-md-4 Team">
			<%=image_tag @event.picture.url(:medium), class:'hrm_event_images'%>
			<h6 class="profileImgHeading"><%#=@employee.fullname%></h6>
			<!-- <h6 class="profileImgEmail"><%#=@employee.email%></h6> -->
			<p class="profileImgText"><%#=@employee.about_me%></p>
		</div>
		<div class="col-md-offset-1 col-md-7">
      		<p>From: <%=@event.start.strftime("%d-%b-%Y")%> To: <%=@event.end_date.strftime("%d-%b-%Y")%></p>
      		<p><%=@event.reason.html_safe%></p> 
		</div>
    </div>
</div>
<a href="javascript:history.back()" class="fa fa-arrow-left btn btn-primary">Back</a>  
<%#= link_to 'Edit', edit_event_path(@event), :class=>"fa fa-pencil-square-o btn btn-warning"%>
<%#= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"fa fa-times btn btn-danger" %>    


