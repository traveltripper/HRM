<p id="notice"><%= notice %></p>
<%title "Events"%>
<div class="row">
  <%@events.each do |event|%>
    <div class="col-md-4 event-background-color">     
      <%=image_tag event.picture.url(:medium), class:'hrm_event_images'%>
      <h4><%=event.title%></h4>
      <p>From: <%=event.start.strftime("%d-%b-%Y")%> To: <%=event.end_date.strftime("%d-%b-%Y")%></p>
      <p><%=event.reason%></p>  
      <%= link_to 'Show', event %>
      <%= link_to 'Edit', edit_event_path(event) %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>    
    </div>
  <%end%>
</div>
<br>

<%= link_to 'New Event', new_event_path %>
