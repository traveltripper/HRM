<%= form_for(@event) do |f| %>

  <div class="form-inputs">
  <%=f.label :title%>
  <%=f.text_field :title, class: "form-control", :required => true%>
  </div>
  <div class="form-inputs">
  <%=f.label :start%>
  <%=f.text_field :start, class: "form-control datepicker", :required => true%>
  </div>
  <div class="form-inputs">
  <%=f.label :end%>
  <%=f.text_field :end, class: "form-control datepicker", :required => true%>
  </div>
  <div class="form-inputs">
  <%=f.label :reason%>
  <%=f.text_area :reason, class: "form-control"%>
  </div>
  <div class="form-inputs">
  <%=f.label :picture%>
  <%=f.file_field :picture%>
  </div>

  <div class="form-actions">
    <%= f.submit :class=>'btn btn-primary'%>
  </div>

<% end %>
