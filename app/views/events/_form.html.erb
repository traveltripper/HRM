<%= tinymce %>
<%= form_for(@event) do |f| %>

  <div class="form-inputs">
  <%=f.label :title%>
  <%=f.text_field :title, class: "form-control", :required => true%>
  </div>
  <br/>
  <div class="form-inputs">
  <%=f.label :start%>
  <%=f.text_field :start, class: "form-control datepicker", :required => true%>
  </div>
  <br/>
  <div class="form-inputs">
  <%=f.label :end_date%>
  <%=f.text_field :end_date, class: "form-control datepicker", :required => true%>
  </div>
  <br/>
  <div class="form-inputs">
  <%=f.label :reason, "Description"%>
  <%=f.text_area :reason, class: "form-control", size: "30x10"%>
  </div>
  <br/>
  <div class="form-inputs">
  <%=f.label :picture%>
  <%=f.file_field :picture%>
  </div>
  <br/>
   <div class="form-inputs">
  <%=f.label :publish%>
  <%= f.select :publish, [['publish', 1], ['inactive', 0]], {}, class: "form-control" %>
  </div>
 
  <br/>
  <div class="form-actions">
    <%= f.submit :class=>'btn btn-primary'%>
  </div>

<% end %>


