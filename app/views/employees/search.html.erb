<%title 'Search Results'%>
<% if @employees.present? %>  
<div class="panel panel-cblue">
<div class="panel-heading">Total Employees by your search: <%=@employees.count%>
<%=link_to "Add Employee", new_employee_path, :class=>'add-edit-links'%>
</div>
<div class="panel-body">

<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>TT ID</th>
      <th>Full Name</th>
      <th>Role</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each_with_index do |emp, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= emp.ttid %></td>
        <td><%= link_to emp.fullname, emp  %></td>
        <td><%= emp.role.name  %></td>
        <%if emp.department_id%>
          <td><%=Department.find(emp.department_id).name%></td>
        <%else%>
          <td>Nil</td>
        <%end%>  
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<% else %>
  <p>There are no Employees containing the term(s) <%= params[:search] %>.</p>
<% end %>