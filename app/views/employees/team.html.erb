<%title "Team"%>

<div class="panel panel-cblue">
<div class="panel-heading">Department: <%=current_employee.department.name%></div>
<div class="panel-body">

<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Company ID</th>
      <th>Full Name</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @team.each_with_index do |emp, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= emp.ttid %></td>
        <td><%= link_to emp.fullname, emp  %></td>
        <td><%= emp.role.name  %></td>         
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<%= link_to ' Back', root_path, :class=>"fa fa-arrow-left btn btn-primary" %>