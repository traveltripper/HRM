<p id="notice"><%= notice %></p>
<% title "Announcements" %>
<div class="row">
<div class="col-md-12">
<% if can? :create, @announcement %>
<%= link_to ' Add', new_announcement_path, :class=>"fa fa-plus btn btn-primary bottom-margin-10 link-float-right" %>
<%end%>
</div>
</div>

<div class="panel panel-cblue">

<div class="panel-body">
<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.message %></td>
        <td><%= link_to '', announcement, :class=>"fa fa-eye btn" %></td>
        <td><%= link_to '', edit_announcement_path(announcement), :class=>"fa fa-pencil-square-o btn " %></td>
        <td><%= link_to '', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-times btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>


