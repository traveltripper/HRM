<div class="row">
<div class="col-md-12">
<%=link_to ' Add', new_conference_room_path, :class=>"fa fa-plus btn btn-primary bottom-margin-10 link-float-right"%>
</div>
</div>

<div class="panel panel-cblue">
<div class="panel-body">

<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Available</th>
    </tr>
  </thead>

  <tbody>
    <% @conference_rooms.each do |conferenceroom| %>
      <tr>
        <td><%= link_to conferenceroom.name, conferenceroom %></td>
        <td><%= conferenceroom.available %></td>
        <td><%= link_to '', conferenceroom, :class=>"fa fa-eye btn" %></td>
        <td><%= link_to '', edit_conference_room_path(conferenceroom), :class=>"fa fa-pencil-square-o btn " %></td>
        <!-- <td><%#= link_to 'Destroy', conferenceroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>  -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
